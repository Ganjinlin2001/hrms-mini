.register-container {
  background: #f5f5f5;
  width: 100vh;
  height: 100vh;
}

.weui-form__text-area {
  text-align: left;
}

.gender-radio-cell {
  display: flex;
}

.weui-cell-my {
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  line-height: 1.41176471;
  font-size: 17px;
  color: var(--weui-FG-0);
}

.show-staff-avatar {
  margin-left: 30rpx;
}

.weui-check__label-my {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.choose-again {
  margin-left: 30rpx;
  margin-top: 60rpx;
  color: #71c7ff;
}
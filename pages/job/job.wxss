/* pages/job/job.wxss */
.nav-scroll-view-panel {
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 80rpx;
  /* justify-content: center; */
}

.nav-item {
  width: 50%;
  text-align: center;
  height: 80rpx;
  background-color: #f5f5f5;
  line-height: 80rpx;
}

.active {
  font-size: 40rpx;
  color: #07c160;
  background-color: #fff;
}

.content-scroll-view-panel {
  width: 100%;
  height: calc(100vh - 80rpx);
}

.apply-page {
  width: 100vw;
  height: 100%;
}

.cell-item {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0rpx 40rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-content: center;
  position: relative;
}

.cell-item::after {
  position: absolute;
  bottom: 0rpx;
  content: "";
  height: 2rpx;
  width: calc(100vw - 80rpx);
  background: #f5f5f5;
}

.cell-label {
  font-weight: 700;
}

.cell-title {
  width: 160rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.new-job-input-box {
  height: 120rpx;
  line-height: 120rpx;
}

.cell-item-textarea {
  display: flex;
  flex-direction: column;
  width: 100vw;
  padding: 0rpx 40rpx;
}

.reason-input-box {
  width: calc(100vw - 80rpx);
  height: 360rpx;
  border: 1rpx solid #b8b8b8;
  border-radius: 18rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.submit-button {
  margin-top: 40rpx;
}

.applying {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  margin: 40rpx 0rpx 60rpx -140rpx;
  left: 50%;
  text-align: center;
  line-height: 280rpx;
  font-size: 44rpx;
  font-weight: 700;
  background-color: #e6a23c;
  color: #fff;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  /* display: flex; */
  /* justify-content: center; */
}

.no-data {
  width: 100vw;
  line-height: 120rpx;
  font-size: 44rpx;
  text-align: center;
  margin-top: 40rpx;
  color: #cecece;
}

.job-item {
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  width: 100vw;
  line-height: 120rpx;
  padding: 20rpx 40rpx;
  position: relative;
  justify-content: space-between;
  box-sizing: border-box;
}

.job-item::after {
  position: absolute;
  content: "";
  height: 1rpx;
  background-color: #f5f5f5;
  width: calc(100vw - 80rpx);
  bottom: 0rpx;
  /* justify-items: center; */
}

.left {
  display: flex;
  flex-direction: column;
  line-height: 120rpx;
}

.left-top {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  /* font-size: rpx; */
}

.left-buttom {
  line-height: 40rpx;
}


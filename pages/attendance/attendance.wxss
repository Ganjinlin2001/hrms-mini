/* pages/attendance/attendance.wxss */
.page {
  background-color: #f5f5f5;
  height: 100vh;
}
.nav-scroll-view-panel {
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 80rpx;
  /* justify-content: center; */
}

.nav-item {
  width: 50%;
  text-align: center;
  height: 80rpx;
  background-color: #f5f5f5;
  line-height: 80rpx;
}

.active {
  font-size: 40rpx;
  color: #07c160;
}

.content-scroll-view-panel {
  width: 100%;
  height: calc(100vh - 80rpx);
}

.apply-page {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.no-data {
  width: 100vw;
  line-height: 120rpx;
  font-size: 44rpx;
  text-align: center;
  color: #cecece;
}

.work-state-panel {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.work-item {
  width: 50vw;
  margin-top: 40rpx;
  width: calc(50vw - 60rpx);
  background-color: #fff;
  height: 170rpx;
  border-radius: 20rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.inner {
  width: calc(50vw - 60rpx);
  background-color: #fff;
  height: 170rpx;
  border-radius: 20rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.work-title {
  line-height: 100rpx;
  font-size: 40rpx;
  font-weight: 700;
}

.no-clock-in {
  line-height: 50rpx;
  color: #cecece;
}

.attendance-btn-pancel {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  /* line-height: 500rpx; */
}

.btn {
  width: 280rpx;
  line-height: 280rpx;
  margin-top: 100rpx;
  background-color: #07c160;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  box-shadow: #060d096c 0px 2px 8px;
  font-size: 48rpx;
}

.done {
  background: #b3babe !important;
}

.log-page {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.attendance-item {
  width: calc(100vw - 80rpx);
  padding: 40rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 40rpx;
}

.info-item {
  line-height: 60rpx;
  display: flex;
}

.info-title {
  width: 180rpx;
}
/* pages/news/news.wxss */


.news-page {
  width: 100vw;
  height: 100vh;
  background: #f5f5f5;
}

.news-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.news-item {
  width: calc(100vw - 80rpx);
  height: 430rpx;
  /* border: 1rpx solid red; */
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.cover {
  width: 100%;
  height: 300rpx;
}

.cover image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.title {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 110rpx;
}

.space {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
}
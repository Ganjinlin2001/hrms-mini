/* pages/leave/leave.wxss */
.cell-item {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0rpx 40rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-content: center;
  position: relative;
}

.cell-item::after {
  position: absolute;
  bottom: 0rpx;
  content: "";
  height: 2rpx;
  width: calc(100vw - 80rpx);
  background: #f5f5f5;
}

.cell-label {
  /* font-weight: 700; */
}

.cell-title {
  width: 160rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.cell-item-textarea {
  display: flex;
  flex-direction: column;
  width: 100vw;
  padding: 0rpx 40rpx;
}

.reason-input-box {
  width: calc(100vw - 80rpx);
  height: 360rpx;
  border: 1rpx solid #b8b8b8;
  border-radius: 18rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.submit-button {
  margin-top: 40rpx;
}

.applying-box {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
}

.cell-reason-title {
  width: 100vw;
  line-height: 60rpx;
}

.applying {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  margin: 40rpx 0rpx 60rpx -140rpx;
  left: 50%;
  text-align: center;
  line-height: 280rpx;
  font-size: 44rpx;
  font-weight: 700;
  background-color: #e6a23c;
  color: #fff;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  /* display: flex; */
  /* justify-content: center; */
}

.reason-text {
  padding-top: 20rpx;
  box-sizing: border-box;
}

.space {
  width: 100%;
  height: 200rpx;
  background-color: #ffffff;
}
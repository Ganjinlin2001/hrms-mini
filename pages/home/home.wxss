/* pages/home/home.wxss */
.home-container {
  display: flex;
  width: 100vw;
  height: 100%;
  background-color: #f5f5f5;
  flex-direction: column;
}

.avatar-container {
  width: 100vw;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
  padding-left: 40rpx;
  position: relative;
  /* padding: 0rpx 40rpx; */
}

.avatar-left {
  width: 160rpx;
  height: 160rpx;
}

.avatar-left image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.avatar-right {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* justify-content: center; */
}

.avatar-right > .name {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 80rpx;
}

.avatar-container > .arrow {
  position: absolute;
  right: 70rpx;
}

.fun-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  width: 100vw;
  line-height: 140rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
}

.fun-item > .icon {
  width: 80rpx;
  height: 80rpx;
}

.fun-item > .icon > image {
  width: 100%;
  height: 100%;
}

.fun-item > .fun-name {
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.fun-item > .arrow {
  position: absolute;
  right: 70rpx;
}

.hover {
  background-color: #c9c9c9;
}

.space {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
}
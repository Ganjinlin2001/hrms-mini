/* pages/signature/signature.wxss */
.page {
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.signature-panel {
  width: calc(100vw - 60rpx);
  height: calc(100vh - 240rpx);
  margin-top: 10rpx;
  background-color: #fff;
  border: 1rpx dashed #bfbfbf;
  border-radius: 8rpx;
}

.canvas {
  width: 100%;
  height: 100%;
}

.tip {
  width: 100vw;
  padding-left: 60rpx;
  line-height: 80rpx;
  color: #595959;
}

.operation-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* align-content: space-around; */
  /* justify-content: space-around; */
  height: 80rpx;
  line-height: 80vh;
  margin-top: 10rpx;
}

.send-box button:nth-child(1){
  margin-bottom: 30rpx;
}
